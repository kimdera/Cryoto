{
  "extends": [
    "plugin:@shopify/typescript",
    "plugin:@shopify/react",
    "plugin:@shopify/prettier"
  ],
  "rules": {
    "react/react-in-jsx-scope": 0,
    "@typescript-eslint/naming-convention": 0,
    "no-process-env": 0,
    "id-length": 0,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "env": {
    "node": true
  }
}
